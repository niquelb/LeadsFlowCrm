<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Inbox Styles-->
    
    <!--#region Search Box-->
    <Style x:Key="InboxSearchBox" TargetType="TextBox" BasedOn="{StaticResource HintedTextBox}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="Background" Value="{StaticResource AREghZyBrush.Foreground.Static}" />
        <Setter Property="Foreground" Value="{StaticResource AREghZyBrush.Deep.1.Background.Static}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <!--#endregion-->
    
</ResourceDictionary>